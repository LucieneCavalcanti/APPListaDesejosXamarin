<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:appListadeDesejos="clr-namespace:APP_ListadeDesejos"
       x:Class="APP_ListadeDesejos.PrincipalMenu">
    <FlyoutItem Title="Meu Perfil"
                Icon="perfil.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate appListadeDesejos:Perfil}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Lista de Desejos"
                Icon="lista.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate appListadeDesejos:Lista}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Meus amigos"
                Icon="amigos.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate appListadeDesejos:Amigos}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Sobre"
                Icon="sobre.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate appListadeDesejos:Sobre}" />
        </Tab>
    </FlyoutItem>
</Shell>